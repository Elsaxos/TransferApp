@model IEnumerable<TransferApp.Models.PriceItem>

@{
    ViewData["Title"] = "Цени (Админ)";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Цени</h2>

        <!-- IMPORTANT: link to AdminPricesController.Create -->
        <a class="btn btn-warning fw-bold"
           asp-controller="AdminPrices"
           asp-action="Create">
            + Нова цена
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary">Няма въведени цени.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Маршрут (BG)</th>
                        <th>Еднопосочно (€)</th>
                        <th>Отиване/връщане (€)</th>
                        <th>Активна</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.OrderBy(x => x.SortOrder).ThenBy(x => x.Id))
                    {
                        <tr>
                            <td>@p.SortOrder</td>
                            <td>@p.RouteBg</td>
                            <td>@p.OneWayPrice.ToString("0.00")</td>
                            <td>@p.RoundTripPrice.ToString("0.00")</td>
                            <td>@(p.IsActive ? "Да" : "Не")</td>
                            <td class="text-end">
                                <!-- IMPORTANT: link to AdminPricesController.Edit -->
                                <a class="btn btn-sm btn-outline-dark"
                                   asp-controller="AdminPrices"
                                   asp-action="Edit"
                                   asp-route-id="@p.Id">
                                    Редакция
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
