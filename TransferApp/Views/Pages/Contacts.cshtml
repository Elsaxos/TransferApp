@model TransferApp.ViewModels.ContactFormViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TransferApp.SharedResources> L

@{
    ViewData["Title"] = L["Contacts_Title"];
}

<div class="container py-4">
    <div class="mx-auto" style="max-width: 1100px;">

        <section class="mb-4 text-center">
            <h1 class="display-6 mb-2">@L["Contacts_Title"]</h1>
            <p class="lead mb-0">@L["Contacts_Subtitle"]</p>
        </section>

        @if (TempData["Success"]?.ToString() == "OK")
        {
            <div class="alert alert-success">
                @L["Contacts_Success_Message"]
            </div>
        }

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex gap-3 align-items-start">
                            <div class="fs-3 text-warning"><i class="bi bi-telephone-fill"></i></div>
                            <div class="w-100">
                                <h5 class="mb-2">@L["Contacts_Phone_Title"]</h5>
                                <div class="d-grid gap-1">
                                    <a class="text-decoration-none fw-semibold" href="tel:+359878989847">+359 878 989 847</a>
                                    <a class="text-decoration-none fw-semibold" href="tel:+359898212070">+359 898 212 070</a>
                                    <a class="text-decoration-none fw-semibold" href="tel:+359878676251">+359 878 676 251</a>
                                </div>
                                <small class="text-muted d-block mt-2">@L["Contacts_Phone_Note"]</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex gap-3 align-items-start">
                            <div class="fs-3 text-warning"><i class="bi bi-envelope-fill"></i></div>
                            <div class="w-100">
                                <h5 class="mb-2">@L["Contacts_Email_Title"]</h5>
                                <a class="text-decoration-none fw-semibold" href="mailto:info@protransfer.bg">info@protransfer.bg</a>
                                <small class="text-muted d-block mt-2">@L["Contacts_Email_Note"]</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex gap-3 align-items-start">
                            <div class="fs-3 text-warning"><i class="bi bi-geo-alt-fill"></i></div>
                            <div class="w-100">
                                <h5 class="mb-2">@L["Contacts_City_Title"]</h5>
                                <div class="fw-semibold">София</div>
                                <small class="text-muted d-block mt-2">@L["Contacts_City_Note"]</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-7">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <div class="mx-auto" style="max-width: 720px;">
                            <h3 class="mb-3">@L["Contacts_Form_Title"]</h3>

                            <form asp-controller="Pages" asp-action="Contacts" method="post" class="row g-3">
                                @Html.AntiForgeryToken()

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label">@L["Contacts_Form_Name"]</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label">@L["Contacts_Form_Phone"]</label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Email" class="form-label">@L["Contacts_Form_Email"]</label>
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Message" class="form-label">@L["Contacts_Form_Message_Label"]</label>
                                    <textarea asp-for="Message" class="form-control" rows="4"
                                              placeholder="@L["Contacts_Form_Message_Placeholder"]"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                                <div class="col-12 d-grid">
                                    <button class="btn btn-warning fw-bold" type="submit">
                                        @L["Contacts_Form_Submit"]
                                    </button>
                                </div>

                                <small class="text-muted">@L["Contacts_Form_Hint"]</small>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="mb-3">@L["Contacts_Map_Title"]</h5>

                        <div class="ratio ratio-4x3 rounded overflow-hidden">
                            <iframe src="https://www.google.com/maps?q=Sofia%20Bulgaria&output=embed"
                                    loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>

                        <small class="text-muted d-block mt-2">
                            *Картата е примерна, после ще сложим реална локация.
                        </small>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
