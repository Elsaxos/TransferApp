@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> L


@{
    ViewData["Title"] = "ProTransfer";
}

<div class="hero-section">
    <div class="hero-overlay"></div>

    <div class="container hero-content">
        <div class="row align-items-center">

            <!-- ЛЯВА ЧАСТ – ТЕКСТ -->
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="hero-text">
                    <h1 class="hero-title">
                        Такси трансфери<br />
                        в страната<br />
                        и чужбина!
                    </h1>
                    <p class="hero-subtitle">
                        ProTransfer – надеждни частни трансфери до летища, хотели и всяка точка в страната и чужбина.
                    </p>

                    <ul class="hero-bullets">
                        <li>✅ Летищни трансфери</li>
                        <li>✅ Междуградски пътувания</li>
                        <li>✅ Фирмени и VIP трансфери</li>
                    </ul>

                    <a href="/Transfer/Create" class="btn btn-warning btn-lg mt-3">
                        Резервирай трансфер
                    </a>
                </div>
            </div>

            <!-- ДЯСНА ЧАСТ – ПАНЕЛ „РЕЗЕРВИРАЙ СЕГА“ -->
            <div class="col-lg-5 offset-lg-1">
                <div class="booking-panel shadow-lg">
                    <h2 class="booking-title">Резервирай сега</h2>

                    <form asp-controller="Transfer" asp-action="Create" method="get" class="booking-form">
                        <div class="row g-2">
                            <div class="col-12 col-md-6">
                                <label class="form-label">Име</label>
                                <input class="form-control" name="customerName" />
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label">Телефон</label>
                                <input class="form-control" name="phone" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label class="form-label">От</label>
                                <input class="form-control" name="from" />
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label">До</label>
                                <input class="form-control" name="to" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label class="form-label">Дата</label>
                                <input class="form-control" type="date" name="date" />
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label">Час</label>
                                <input class="form-control" type="time" name="time" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Пътници</label>
                                <input class="form-control" type="number" name="passengers" min="1" value="1" />
                            </div>
                        </div>

                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" id="termsCheck">
                            <label class="form-check-label" for="termsCheck">
                                Съгласен съм личните ми данни да бъдат обработвани за целите на резервацията.
                            </label>
                        </div>

                        <button type="submit" class="btn btn-dark w-100 mt-3">
                            Изпрати заявка
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

