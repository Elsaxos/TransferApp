@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TransferApp.SharedResources> L

@{
    ViewData["Title"] = L["Home_Title"];
}

<section class="pro-hero">
    <div class="pro-hero-bg"></div>
    <div class="pro-hero-overlay"></div>

    <div class="container pro-hero-inner">
        <div class="pro-hero-left">
            <h1 class="pro-hero-title">
                @L["Hero_Title_Line1"]<br />
                @L["Hero_Title_Line2"]<br />
                @L["Hero_Title_Line3"]<br />
                @L["Hero_Title_Line4"]
            </h1>
        </div>
    </div>
</section>

<section class="services-dark">
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col">
                <h2 class="services-title">@L["Services_Title"]</h2>
                <p class="services-subtitle">@L["Services_Subtitle"]</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-box">
                    <div class="service-icon">
                        <i class="bi bi-airplane"></i>
                    </div>
                    <h5>@L["Service_1_Title"]</h5>
                    <p>@L["Service_1_Text"]</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="service-box">
                    <div class="service-icon">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                    <h5>@L["Service_2_Title"]</h5>
                    <p>@L["Service_2_Text"]</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="service-box">
                    <div class="service-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <h5>@L["Service_3_Title"]</h5>
                    <p>@L["Service_3_Text"]</p>
                </div>
            </div>
        </div>
    </div>
</section>



