@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> L

<div class="container mt-5">
    <div class="row">

        <!-- Лява част: основни действия -->
        <div class="col-md-8">
            <h2>Автомобилни трансфери</h2>

            <p class="lead">
                @L["Site_Slogan"]
            </p>

            <div class="mt-4">
                <a class="btn btn-primary btn-lg" href="/Transfer/Create">
                    🚕 @L["Menu_BookTransfer"]
                </a>

                <a class="btn btn-outline-secondary btn-lg ms-2" href="/Car/Index">
                    🚗 @L["Menu_Cars"]
                </a>
            </div>
        </div>

        <!-- Дясна част: Бърз достъп (описателно, без линк към админ) -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Бърз достъп</h4>
                    <ul class="list-unstyled mt-3">
                        <li>✔ Създаване на заявки за трансфер</li>
                        <li>✔ Управление на автопарк</li>
                        <li>✔ Преглед на всички резервации</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
