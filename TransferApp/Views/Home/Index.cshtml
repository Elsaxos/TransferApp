@using Microsoft.Extensions.Localization
@inject IStringLocalizer<TransferApp.SharedResources> L

@{
    ViewData["Title"] = L["Home_Title"];
}

<section class="pro-hero">
    <div class="pro-hero-bg"></div>
    <div class="pro-hero-overlay"></div>

    <div class="container pro-hero-inner">
        <div class="pro-hero-left">
            <h1 class="pro-hero-title">
                @L["Hero_Title_Line1"]<br />
                @L["Hero_Title_Line2"]<br />
                @L["Hero_Title_Line3"]<br />
                @L["Hero_Title_Line4"]
            </h1>

            <p class="pro-hero-subtitle">@L["Hero_Subtitle"]</p>

            <ul class="hero-bullets">
                <li>✅ @L["Hero_Bullet_1"]</li>
                <li>✅ @L["Hero_Bullet_2"]</li>
                <li>✅ @L["Hero_Bullet_3"]</li>
            </ul>

            <a class="btn pro-hero-cta" href="/Transfer/Create">
                @L["Hero_CTA"]
            </a>
        </div>
    </div>
</section>

<section class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-4">
            <div class="col">
                <h2 class="fw-bold">@L["Services_Title"]</h2>
                <p class="text-muted">@L["Services_Subtitle"]</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">✈️</div>
                    <h5>@L["Service_1_Title"]</h5>
                    <p>@L["Service_1_Text"]</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">🚗</div>
                    <h5>@L["Service_2_Title"]</h5>
                    <p>@L["Service_2_Text"]</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">⭐</div>
                    <h5>@L["Service_3_Title"]</h5>
                    <p>@L["Service_3_Text"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

