@model TransferApp.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Админ панел";
}

<div class="container py-4">
    <h2 class="mb-3">Админ панел</h2>

    <div class="d-flex gap-2 mb-4">
        <a class="btn btn-outline-light" href="/Admin/Inquiries">Запитвания</a>
        <a class="btn btn-outline-light" href="/Admin/Reservations">Резервации</a>
        <a class="btn btn-warning fw-bold" href="/Admin/Prices">Цени</a>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">Запитвания</h5>
                    <p class="card-text">Общо: <strong>@(Model?.Inquiries?.Count ?? 0)</strong></p>
                    <a class="btn btn-sm btn-outline-light" href="/Admin/Inquiries">Отвори</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">Резервации</h5>
                    <p class="card-text">Общо: <strong>@(Model?.Reservations?.Count ?? 0)</strong></p>
                    <a class="btn btn-sm btn-outline-light" href="/Admin/Reservations">Отвори</a>
                </div>
            </div>
        </div>
    </div>
</div>

