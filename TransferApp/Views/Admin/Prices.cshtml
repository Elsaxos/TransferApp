@model List<TransferApp.Models.PriceItem>

@{
    ViewData["Title"] = "Цени (Админ)";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Цени (EUR)</h2>
        <a class="btn btn-warning fw-bold" href="/Admin/PricesCreate">+ Нова цена</a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Маршрут (BG)</th>
                    <th class="text-center">Еднопосочно (€)</th>
                    <th class="text-center">Двупосочно (€)</th>
                    <th class="text-center">Ред</th>
                    <th class="text-center">Активно</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.RouteBg</td>
                        <td class="text-center">@x.OneWayPrice.ToString("0.00")</td>
                        <td class="text-center">@x.RoundTripPrice.ToString("0.00")</td>
                        <td class="text-center">@x.SortOrder</td>
                        <td class="text-center">@(x.IsActive ? "✅" : "—")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-warning" href="/Admin/PricesEdit/@x.Id">Редакция</a>

                            <form method="post" action="/Admin/PricesDelete/@x.Id" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Сигурен ли си, че искаш да изтриеш тази цена?');">
                                    Изтрий
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
