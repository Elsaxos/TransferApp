<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TransferApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">TransferApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Transfer/Create">Резервирай трансфер</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Car/Index">Автопарк</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Car/Create">Добави кола</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Index">Админ панел</a>
                        </li>
                    </ul>
                    <span class="navbar-text text-light">
                        Автомобилни трансфери
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-4">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3 text-center">
            <small>&copy; @DateTime.Now.Year - TransferApp</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
